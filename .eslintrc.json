{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/mediawiki"
	],
	"globals": {
		"mediaWiki": true,
		"JSON": true,
		"jQuery": false,
		"Caman": false
	},
	"rules": {
		"valid-jsdoc": "off",
		"no-shadow": "warn",
		"no-useless-escape": "warn",
		"es-x/no-resizable-and-growable-arraybuffers": "warn",
		"prefer-const": "warn",
		"no-var": "warn"
	}
}
